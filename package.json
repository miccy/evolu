{
	"private": true,
	"name": "@evolu/monorepo",
	"scripts": {
		"dev": "turbo --filter @evolu/* dev --filter web --concurrency=11",
		"build": "turbo --filter @evolu/* build",
		"build:web": "bun run build:docs && turbo --filter web build",
		"build:docs": "typedoc && bun run --filter=web fix:docs",
		"test": "turbo run test",
		"test:coverage": "turbo run test:coverage",
		"test:watch": "turbo run test:watch",
		"start": "turbo start",
		"lint": "turbo lint && bun run lint:root",
		"lint:root": "biome check *.json *.yaml scripts",
		"format": "turbo format && bun run format:root",
		"format:root": "biome check *.json *.yaml scripts --write",
		"lint-monorepo": "bunx sherif@latest",
		"verify": "bun run build && bun run test && bun run lint && bun run lint-monorepo && bun run typedoc",
		"clean": "turbo clean && rimraf node_modules pnpm-lock.yaml bun.lock .turbo .eslintcache out",
		"version": "changeset version",
		"release": "bun run build && changeset publish",
		"ios": "cd examples/react-expo && pnpm ios",
		"android": "cd examples/react-expo && pnpm android",
		"bench": "turbo bench",
		"examples:toggle-deps": "bun ./scripts/toggle-examples-deps.mts",
		"examples:build": "turbo --filter @example/* build",
		"examples:react-nextjs:dev": "turbo --filter @example/react-nextjs dev",
		"examples:react-vite-pwa:dev": "turbo --filter @example/react-vite-pwa dev",
		"examples:svelte-vite-pwa:dev": "turbo --filter @example/svelte-vite-pwa dev",
		"examples:vue-vite-pwa:dev": "turbo --filter @example/vue-vite-pwa dev",
		"publish:local": "bun ./scripts/publish-local.mts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@changesets/cli": "^2.29.8",
		"@types/inquirer": "^9.0.9",
		"rimraf": "^6.1.2",
		"turbo": "^2.7.4",
		"typedoc": "^0.28.16",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"packageManager": "pnpm@10.28.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@tailwindcss/oxide",
			"better-sqlite3",
			"electron",
			"electron-winstaller",
			"esbuild",
			"lmdb",
			"msgpackr-extract",
			"react-native-nitro-modules",
			"sharp",
			"unrs-resolver"
		],
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/*",
				"expo-modules-*",
				"typescript"
			]
		}
	},
	"patchedDependencies": {
		"@changesets/assemble-release-plan": "patches/@changesets__assemble-release-plan.patch"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"examples/*"
		],
		"catalogs": {
			"react19": {
				"@types/react": "~19.2.7",
				"@types/react-dom": "~19.2.3",
				"react": "19.2.3",
				"react-dom": "19.2.3"
			}
		}
	},
	"dependencies": {
		"@evolu/biome-config": "workspace:*"
	}
}
